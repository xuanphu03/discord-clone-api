datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

model Org {
  id     String @id @default(cuid())
  icon   String
  name   String
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("orgs")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  salt     String
  Org      Org[]

  @@map("users")
}
